<%= render "shared/error_messages", model: @visualization %>

<div class="row">
  <div class="col-md-4">
  <h2>New Visualization</h2>
  <%= form_for(@visualization) do |f| %>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Select a query to visualize</label>
      <%= f.select(:saved_query_id, options_for_select(@saved_queries.map{|sv| [sv.name, sv.id]}), {}, {class: "form-control"}) %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Visualization", class: "btn btn-primary" %>
    </div>
  <%- end %>
  </div>
</div>
