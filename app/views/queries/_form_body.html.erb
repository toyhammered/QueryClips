<%= render "shared/error_messages", model: @saved_query %>

<div class="form-group">
  <%- if policy(@saved_query).edit? %>
    <input type="text" name="name" placeholder="Name your query..." class="form-control" value="<%= @saved_query.name %>" />
  <%- else %>
    <input type="text" name="name" placeholder="Name your query..." class="form-control" value="<%= @saved_query.name %>" disabled />
  <%- end %>
</div>
<%= render "query_box" %>
<%= render "database_connection_selector" %>
<div class="form-group">
  <%- if policy(@saved_query).edit? %>
    <input type="submit" value="Run Query Clip" class="btn btn-primary form-control" />
  <%- else %>
    <input type="submit" value="Run Query Clip" class="btn btn-primary form-control" disabled />
  <%- end %>

</div>
