<form action="<%= queries_path %>" method="POST" class="form-inline">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <input type="hidden" value="<%= @query %>" name="query" />
  <input type="hidden" value="<%= @database_connection.id %>" name="database_connection_id" />
  <input type="text" name="name" placeholder="Name your query..." class="form-control" />
  <input type="submit" value="Save Query" class="form-control btn btn-primary"/>
</form>

